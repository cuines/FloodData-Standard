{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Flood Data Standard - Core Schema",
  "description": "JSON schema for hydrological observations",
  "type": "object",
  "properties": {
    "stationId": {
      "type": "string",
      "description": "Unique identifier of the monitoring station"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the observation"
    },
    "waterLevel": {
      "type": "number",
      "description": "Water level measurement"
    },
    "flowRate": {
      "type": "number",
      "description": "Flow rate measurement"
    },
    "precipitation": {
      "type": "number",
      "description": "Precipitation accumulation over a period"
    }
  },
  "required": ["stationId", "timestamp"]
}